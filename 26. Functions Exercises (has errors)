print('Exercise #1')
def find_max(a,b,c):
  numbers_1 = []
  numbers_1 += a,b,c
  for num_1 in numbers_1:
    if a > b and a > c:
      print(f'The maximum number is {a}.')
    if b > a and b > c:
      print(f'The maximum number is {b}.')
    if c > a and c > b:
      print(f'The maximum number is {c}.')
  return num_1
find_max(21,-14,7)

