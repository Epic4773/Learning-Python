print('Exercise #5')

def case_count(string_5):
  upper_count = 0
  lower_count = 0
  for char in string_5:
    if char.isupper():
      upper_count += 1
    if char.islower():
      lower_count += 1
case_count('One Day, I\'m going to make Onions cry.')
print(f'There are {upper_count} uppercase characters in your string and {lower_count} lowercase character.')

