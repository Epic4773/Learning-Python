print('Function 3')
print()

def function3(string):
  upper_count = 0
  lower_count = 0
  for char in string:
    if char.isupper():
      upper_count += 1
    if char.islower():
      lower_count += 1

print(function3('Old Vincennes Rd'))
print(function3('Floyd Central HS'))

