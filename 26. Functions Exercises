print('Exercise #5')
def case_count(string_5):
  upper_count = 0
  lower_count = 0
  for char in string_5:
    if char.isupper():
      upper_count += 1
    if char.islower():
      lower_count += 1
  return upper_count, lower_count
upper, lower = case_count('One Day, I\'m going to make Onions cry.')
print(f'There are {upper} uppercase characters in your string and {lower} lowercase characters.')

print()
print('Exercise #6')
def is_prime(number_6):
  prime = True
  for factor in range(2, number_6):
    if number_6 % factor == 0:
      prime = False
      break
  return prime
print(is_prime(7))

