import random

class Account:
  def __init__ (self, first, last):
    self.first = first
    self.last = last
    self.username = first[0].lower() + last.lower()
    self.balance = 0
  
  def deposit(self, deposit):
    if type(deposit) != int:
      print('deposit only accepts inter values.')
    elif deposit < 0:
      print('Try the withdraw command instead of depositing negatives.')
    else:
      self.balance += deposit

  def withdraw(self, withdraw):
    if type(withdraw) != int:
      print('withdraw only accepts inter values.')
    elif withdraw < 0:
      print('Try the deposit command instead of withdrawing negatives.')
    elif withdraw > self.balance:
      print('You cannot overdraw your account.')  
    else:
      self.balance -= withdraw

  def display_account(self):
    print()
    print(f"Account Holder: {self.first} {self.last}")
    print(f"Account Username: {self.username}")
    print(f"Account Balance: {self.balance}")
    print()

class Checking(Account):
  def __init__(self, first, last):
    super().__init__(first, last)
    self.card_number = ''

  def getNewCard(self):
    card_number = ''
    for char_count in range(16):
      if char_count > 0 and char_count % 4 == 0:
        self.card_number += '-'
      self.card_number += str(random.randint(0,9))
    return self.card_number

  def show_card(self):
    print(f"Your credit card number is: {self.card_number}")

class Savings(Account):
  def __init__(self, first, last):
    super().__init__(first, last)
  
  def withdraw(self, withdraw):
    print('You cannot withdraw money from a savings account.')

checking_account = Checking('Andrew','Washington')
checking_account.getNewCard()
checking_account.show_card()
