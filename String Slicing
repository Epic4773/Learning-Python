string = 'Password'
# general syntax:  string[start:end:step]

# gets the 0th index, or first character of the string
print('Ex 1) '+string[0])

print('Ex 2) '+string[7])

# string[start:end] starts with start and stops at end - 1
print('Ex 3) '+string[2:5])

# starts with index 2 and goes to the last character
print('Ex 4) '+string[2:])

# starts at the first character and goes to index 6 - 1
print('Ex 5) '+string[:6])

# step of 2 takes every 2nd, or every other character. If no step is given, the step size is 1
print('Ex 6) '+string[2:7:2])

# string objects can call the lower() method which will make all characters lowercase.
print('Ex 7) '+string.lower())

print('Ex 8) '+string.upper())
